# ----HOTKEYS----

# Volume Movements
XF86AudioRaiseVolume
	pactl set-sink-volume 0 +5% 
#&& notify-send  "Volume: $(pulsemixer --get-volume | cut -d' ' -f1)%"
XF86AudioLowerVolume
	pactl set-sink-volume 0 -5%

# super equal
# 	pactl set-sink-volume 0 +5% 

# super minus pactl set-sink-volume 0 -5%

XF86AudioMute
	pactl set-sink-mute 0 toggle	

# PlayerCtl Commands
super + {space,comma,period}
	playerctl {play-pause,previous,next} -p spotify

# Backlight Movements
XF86MonBrightnessUp
	xbacklight -inc 5

XF86MonBrightnessDown
	xbacklight -dec 5

# terminal emulator
super + Return
	alacritty	

super + shift + Return
  tabbedterm

# LF
super + shift + backslash
  tabbedterm -e "lf"

super + backslash
  alacritty --working-directory=`xcwd` -e 'lf'

# program launcher
super + Shift_R 
	rofi -show run -display-run "run"

# make sxhkd reload its configuration files:
super + Escape
  pkill -USR1 -x sxhkd && notify-send "SXHKD Restarted"

# Screen shot
super + {_,shift} + p
  gscreenshot {_,-sn}

# Color Picker
super + shift + c
  xcolor -s

# Calendar
super + c
  chromium --app="https://calendar.google.com/calendar/" &

# Mail
super + m
  mailspring

# Bluetooth
super + b
  rofi-bluetooth
#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest.local

# Rotate the current desktop
super + r
  bspc node @/ -R 90

#
# state/flags
#

# set the window state
super + {a,s,d,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {s}
	bspc node -g {sticky}

#
# focus/swap
#

# focus the next/previous node in the current desktop
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}'

# Music Desktop
super + backslash
	bspc desktop -f '^8'

# Monitor Desktop
super + BackSpace
	bspc desktop -f '^7'

#
# preselect
#

# preselect the direction
super + space + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
#super + ctrl + {1-9}
#	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
#super + ctrl + space
#	bspc node -p cancel

# cancel the preselection for the focused desktop
#super + ctrl + shift + space
#	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#
# expand/contract a window 
# resize windows i3 style
#
super + ctrl + {h,j,k,l}
	;zsh ~/.config/sxhkd/resize {x -, y +, y -, x +}

# move a floating window
super + alt + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}
