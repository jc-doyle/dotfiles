# Get Here
map g' $nvim ~/other/dotfiles/config/lf/lfrc

# Movement
map gp cd ~/projects/point-north/
map gc cd ~/university/cs/
map gm cd ~/university/ia/
map gi cd ~/university/inf/

map gT cd ~/.local/share/Trash/
map gl cd ~/.local/share/

map gS cd ~/other/dotfiles/scripts/
map gC cd ~/other/dotfiles/colors/

map gd cd ~/downloads
map gs cd ~/other/dotfiles/colors/

map g<gt> cd ~/.config
map g. cd ~/other/dotfiles/config
map gN cd ~/.config/nvim/lua
map gP cd ~/.local/share/nvim/site/pack/packer
map gD cd ~/.config/dwm

# Source Commands
source ~/.config/lf/commands

# Default Programs
cmd open ${{
    printf "\033]0; $PWD\007" > /dev/tty
    case $(xdg-mime query filetype $f) in
        */*spreadsheet*) libreoffice $fx;;
        */*stl) f3d $fx;;
        */pdf) zathura $fx;;
        */epub*) zathura $fx;;
        */x-blender) blender $fx;;
        image/*) sxiv -b $fx;;
        video/*) mpv $fx;;
        text/*) nvim $fx;;
        */*) nvim $fx;;
    esac 
    }}

# General Settings
set icons
set period 1
set scrolloff 10
set drawbox true
set ratios 2:3
set previewer ~/.config/lf/preview
set errorfmt "\033[0;33;40m%s\033[0m"

# Z shell specific settings
set shell zsh
set shellopts '-euy'
set ifs "\n"


# General Mappings

# Extract/Zip
map Zu extract
map Zz zip
map Zt tar

# Paste Link
map P :link

# View Size
map zS %du -sh $f

# General 
map <esc> quit
map <enter> shell
map w quit

# Execute/Chmod
map xX $$f
map xx !$f
map xM chmod
map xm $chmod +x $f

# Neovim
map <c-n> $nvim $fx

# Sudoedit
map S $sudoedit $fx

# dedicated keys for file opener actions
map o &mimeopen $f
map O $mimeopen --ask $f

# New Files
map N push :folder<space>
map n push :file<space>
map <a-n> newfold

# Wallpaper
map W $zsh setbg $f 

map A rename # at the very end
map r push A<c-u> # new rename
map I push A<c-a> # at the very beginning
map i push A<a-b><a-b><a-f> # before extention
map a push A<a-b> # after extention
map R bulk-rename

# Delete Restore
map D trash
map U restore

# Yank paths
map Yy yank-dirname
map YY yank-path
map Yi yank-basename
map YI yank-basename-without-extension
