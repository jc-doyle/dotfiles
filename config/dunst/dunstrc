[global]
  # 0 = Current
  monitor = 0
  follow = none

  # UI
  # width x height x y  
    ### Geometry ###

    # dynamic width from 0 to 300
    # width = (0, 300)
    # constant width of 300
  width = (0,450)

    # The maximum height of a single notification, excluding the frame.
  height = 295

    # Position the notification in the top right corner
  origin = top-left

    # Offset from the origin
  offset = 252x8
  indicate_hidden = yes
  shrink = yes
  transparency = 0
  separator_height = 0
  frame_width = 0 
  padding = 6
  horizontal_padding = 15
  separator_color=auto

  # Sort messages by urgency.
  sort = no

  # Don't remove messages, if the user is idle (no mouse or keyboard input)
  idle_threshold = 120

  # Text
  font = Cozette 9 
  line_height = 0
  markup = full
  alignment = center
  show_age_threshold = 60
  word_wrap = no
  ellipsize = end
  ignore_newline = yes
  stack_duplicates = false
  hide_duplicate_count = false
  show_indicators = no

  # Icons
  icon_position = off
  max_icon_size = 0

  # History
  sticky_history = yes
  history_length = 20

  # Mouse
  mouse_left_click = close_current
  mouse_middle_click = do_action
  mouse_right_click = close_all

  # WM Settings
  title = Dunst
  class = Dunst

  # Other
  browser = /usr/bin/firefox -new-tab
  corner_radius = 0
  force_xinerama = false

  # The format of the message.  Possible variables are:
  #   %a  appname
  #   %s  summary
  #   %b  body
  #   %i  iconname (including its path)
  #   %I  iconname (without its path)
  #   %p  progress value if set ([  0%] to [100%]) or nothing
  #   %n  progress value if set without any extra characters
  #   %%  Literal %
  # Markup is allowed
  format = "%s"

# %%base16_template: dunst##default %%
[urgency_low]
    background = "#9ADBFFDD"
    foreground = "#3A4458"
    timeout = 10

[urgency_normal]
    background = "#9ADBFFDD"
    foreground = "#3A4458"
    timeout = 15

[urgency_critical]
    background = "#FDAFFFAA"
    foreground = "#2E3647"
    timeout = 0

# %%base16_template_end%%

# Messages can be matched by
#    appname (discouraged, see desktop_entry)
#    body
#    category
#    desktop_entry
#    icon
#    match_transient
#    msg_urgency
#    stack_tag
#    summary
#
# and you can override the
#    background
#    foreground
#    format
#    frame_color
#    fullscreen
#    new_icon
#    set_stack_tag
#    set_transient
#    timeout
#    urgency
#

[email]
  desktop_entry = "Mailspring"
  format = " %s" 
  timeout = 20

# [power]
#   format = " %s"

[screenshot]
  summary = "gscreenshot"
  format = " Screenshot Taken" 

